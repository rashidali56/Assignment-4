#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int N;
    cout << "Enter order of matrix (N): ";
    cin >> N;

    vector<int> elements;
    int matrix[100][100];

    cout << "Enter matrix elements:\n";
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cin >> matrix[i][j];
            elements.push_back(matrix[i][j]);
        }
    }

   
    sort(elements.begin(), elements.end());

   
    int index = 0;
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            matrix[i][j] = elements[index++];
        }
    }

    cout << "\nSorted Matrix:\n";
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
