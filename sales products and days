#include <iostream>
using namespace std;

const int PRODUCTS = 5;
const int DAYS = 7;


void inputSales(int sales[PRODUCTS][DAYS]);
void calculateRevenue(int sales[PRODUCTS][DAYS], int productRevenue[PRODUCTS], int dayRevenue[DAYS]);
int findMaxProduct(int productRevenue[PRODUCTS]);
int findBestDay(int dayRevenue[DAYS]);

int main() {
    int sales[PRODUCTS][DAYS];
    int productRevenue[PRODUCTS] = {0};
    int dayRevenue[DAYS] = {0};

   
    inputSales(sales);

   
    calculateRevenue(sales, productRevenue, dayRevenue);

 
    int maxProduct = findMaxProduct(productRevenue);
    int bestDay = findBestDay(dayRevenue);

   
    cout << "\nWeekly sales for each product:\n";
    for (int i = 0; i < PRODUCTS; i++) {
        cout << "Product " << i + 1 << ": " << productRevenue[i] << endl;
    }

    cout << "\nProduct with maximum weekly revenue: Product "
         << maxProduct + 1 << endl;

    cout << "Best sales day overall: Day "
         << bestDay + 1 << endl;

    return 0;
}

void inputSales(int sales[PRODUCTS][DAYS]) {
    cout << "Enter daily sales for 5 products over 7 days:\n";
    for (int i = 0; i < PRODUCTS; i++) {
        cout << "\nProduct " << i + 1 << ":\n";
        for (int j = 0; j < DAYS; j++) {
            cout << " Day " << j + 1 << ": ";
            cin >> sales[i][j];
        }
    }
}


void calculateRevenue(int sales[PRODUCTS][DAYS],
                      int productRevenue[PRODUCTS],
                      int dayRevenue[DAYS]) {
    for (int i = 0; i < PRODUCTS; i++) {
        for (int j = 0; j < DAYS; j++) {
            productRevenue[i] += sales[i][j];
            dayRevenue[j] += sales[i][j];
        }
    }
}


int findMaxProduct(int productRevenue[PRODUCTS]) {
    int maxIndex = 0;
    for (int i = 1; i < PRODUCTS; i++) {
        if (productRevenue[i] > productRevenue[maxIndex]) {
            maxIndex = i;
        }
    }
    return maxIndex;
}


int findBestDay(int dayRevenue[DAYS]) {
    int maxIndex = 0;
    for (int i = 1; i < DAYS; i++) {
        if (dayRevenue[i] > dayRevenue[maxIndex]) {
            maxIndex = i;
        }
    }
    return maxIndex;
}
